@model IEnumerable<App1.Models.Project>

@{
    ViewBag.Title = "Index";
}

<h2>Проекты</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<form method="get">
    <div class="form-inline">
        @Html.TextBox("SearchString", "", new { @class = "form-control" }) &nbsp;
        <input type="submit" value="Найти" class="btn btn-default" /> &nbsp;&nbsp;
        @Html.TextBox("date1", "", new { type = "date", @class = "form-control" })&nbsp;&nbsp;
        @*<input type="date" name="date1" class="form-control" />&nbsp;&nbsp;*@
        @Html.TextBox("date2","", new { type = "date", @class = "form-control" })&nbsp;&nbsp;
        <input type="submit" value="Найти" class="btn btn-default" /> &nbsp;&nbsp;
        @Html.ActionLink("Сортировать по дате", "Index", new { sortOrder = ViewBag.DateSortParm }, new { @class = "btn btn-success" })
    </div>
</form>
<p></p>
<p></p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeadLine)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Worker_Id)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeadLine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Worker.Name)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Projects" , new { id = item.Id })" class="btn btn-labeled btn-warning btn-sm">

                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
                <a href="@Url.Action("Details", "Projects" , new { id = item.Id })" class="btn btn-labeled btn-info btn-sm">

                    <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                </a>
                <a href="@Url.Action("Delete", "Projects" , new { id = item.Id })" class="btn btn-labeled btn-danger btn-sm">

                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }

</table>
