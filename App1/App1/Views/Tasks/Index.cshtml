@model IEnumerable<App1.Models.Task>

@{
    ViewBag.Title = "Index";
}

<h2>Задания</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>

<form class="form-inline my-2 my-lg-0">
    @Html.TextBox("SearchString", "", new { @class = "form-control" }) &nbsp;
    <input type="submit" value="Найти" class="btn btn-default" /> &nbsp;&nbsp;
    <label class="control-label">Статус: </label> &nbsp;
    @Html.CheckBox("status", false, new { @class = "form-control" }) &nbsp;
    <input type="submit" value="Найти" class="btn btn-secondary my-2 my-sm-0" /> &nbsp;&nbsp;
    @Html.ActionLink("Сортировать по дате", "Index", new { sortOrder = ViewBag.DateSortParm }, new { @class = "btn btn-success" }) &nbsp;
    @Html.ActionLink("Сортировать по сложности", "Index", new { sortOrder = ViewBag.ComplexitySortParm }, new { @class = "btn btn-success" })

</form>
<p></p>
<p></p>
<table class="table" style="margin: -10px">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Complexity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Worker_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Project_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Begin_Data)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Deadline_Data)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Complexity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Worker.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Begin_Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deadline_Data)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Tasks" , new { id = item.Id })" class="btn btn-labeled btn-warning btn-sm">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
                <a href="@Url.Action("Details", "Tasks" , new { id = item.Id })" class="btn btn-labeled btn-info btn-sm">
                    <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                </a>
                <a href="@Url.Action("Delete", "Tasks" , new { id = item.Id })" class="btn btn-labeled btn-danger btn-sm">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true" style="height:5px;"></span>
                </a>
            </td>
        </tr>
    }

</table>
