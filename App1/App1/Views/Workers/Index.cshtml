@model IEnumerable<App1.Models.Worker>

@using PagedList;

@{
    /**/

    ViewBag.Title = "Index";
}

<h2>Работники</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>

<form method="get" class="form-inline my-2 my-lg-0">
    @Html.TextBox("SearchString", "", new { @class = "form-control" }) &nbsp;
    <input type="submit" value="Найти" class="btn btn-default" /> &nbsp; &nbsp;
    <label class="control-label">Специализация: </label> &nbsp; &nbsp;
    @Html.DropDownList("specialization", ViewBag.Specializations as SelectList,
                htmlAttributes: new { @class = "form-control" }) &nbsp;
    @Html.CheckBox("check", false, new { @class = "form-control" }) &nbsp;

    <input type="submit" value="Фильтр" class="btn btn-default" /> &nbsp; &nbsp;
    @Html.ActionLink("Сортировать по имени", "Index", new { sortOrder = ViewBag.NameSortParm }, new { @class = "btn btn-success" })
</form>
<p></p>
<p></p>


<table class="table">
    <tr>
        <th>
            ФИО
        </th>
        <th>
            Паспорт
        </th>
        <th>
            Контактный телефон
        </th>
        <th>
            Электронная почта
        </th>
        <th>
            Специализация
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Passport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialization)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Workers" , new { id = item.Id })" class="btn btn-labeled btn-warning btn-sm">

                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
                <a href="@Url.Action("Details", "Workers" , new { id = item.Id })" class="btn btn-labeled btn-info btn-sm">

                    <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                </a>
                <a href="@Url.Action("Delete", "Workers" , new { id = item.Id })" class="btn btn-labeled btn-danger btn-sm">

                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </a>

            </td>
        </tr>
    }

</table>
