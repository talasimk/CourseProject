@model IEnumerable<App1.Models.Customer>

@{
                /**/

                ViewBag.Title = "Index";
}

<h2>Заказчики</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<form method="get">
    <div class="form-inline">
        @Html.TextBox("SearchString", "", new { @class = "form-control" }) &nbsp;
        <input type="submit" value="Найти" class="btn btn-default" />
    </div>
</form>
<p></p>
<p></p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Representative)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone_Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Representative)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Phone_Number)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        <a href="@Url.Action("Edit", "Customers" , new { id = item.Id })" class="btn btn-labeled btn-warning btn-sm">
            
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </a>
        <a href="@Url.Action("Details", "Customers" , new { id = item.Id })" class="btn btn-labeled btn-info btn-sm">
           
            <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
        </a>
        <a href="@Url.Action("Delete", "Customers" , new { id = item.Id })" class="btn btn-labeled btn-danger btn-sm">
       
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        </a>
    </td>
</tr>
}

</table>
